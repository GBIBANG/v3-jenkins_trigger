pipeline {
    agent any
    
    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Commit') {
            steps {
               script {
                    sh 'git checkout -b jenkins'
                    // Ajoutez une modification dans un fichier ou modifiez un fichier existant
                    sh 'echo "Jenkins build commit" > build-commit.txt'
                    sh 'git add .'
                    sh "git commit -m 'Jenkins build commit'"
                    sh 'git status'
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    sh 'git push -u origin jenkins'
                }
            }
        }
   
    }

    post {
        always {
            cleanWs()
        }
    }
}
